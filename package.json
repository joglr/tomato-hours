{
  "name": "tomato-hours",
  "version": "1.2.0",
  "private": true,
  "homepage": "https://tomato-hours.firebaseapp.com",
  "author": "Jonas RÃ¸ssum <http://jonas.fyi>",
  "dependencies": {
    "firebase": "^4.1.3",
    "lodash.debounce": "^4.0.8",
    "material-design-icons": "^3.0.1",
    "moment": "^2.18.1",
    "raven-js": "^3.16.1",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-ga": "^2.4.1",
    "react-md": "^1.2.11",
    "react-redux": "^5.0.5",
    "redux": "^3.7.1",
    "redux-timer-middleware": "^0.1.2",
    "roboto-fontface": "^0.8.0"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.1",
    "cli-real-favicon": "0.0.6",
    "cross-env": "^5.1.3",
    "eslint-plugin-jest": "^21.12.1",
    "eslint-plugin-react": "^7.6.1",
    "firebase-tools": "^3.17.4",
    "react-scripts": "1.0.10",
    "rimraf": "^2.6.2"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "rimraf build && react-scripts build && npm run icon",
    "serve-build": "npm run build && serve build",
    "test": "cross-env CI=true react-scripts test --env=jsdom --verbose",
    "deploy": "npm run test && npm run build && firebase deploy",
    "deploy-ci-master": "firebase use tomato-hours && firebase deploy -m \"Branch $CIRCLE_BRANCH, build $CIRCLE_SHA1\" --only hosting --non-interactive --token=$FIREBASE_DEPLOY_KEY",
    "deploy-ci-dev": "firebase use tomato-hours-beta && firebase deploy -m \"Branch $CIRCLE_BRANCH, build $CIRCLE_SHA1\" --only hosting --non-interactive --token=$FIREBASE_DEPLOY_KEY_BETA",
    "test-watch": "react-scripts test --env=jsdom --verbose",
    "coverage": "react-scripts test --env=jsdom --coverage",
    "eject": "react-scripts eject",
    "icon": "real-favicon generate ./graphics/faviconDescription.json ./graphics/faviconData.json build/static/media && real-favicon inject ./graphics/faviconData.json ./build ./build/index.html",
    "check-icon-update": "real-favicon check-for-update --fail-on-update ./graphics/faviconData.json"
  },
  "peerDependencies": {
    "npm": "^5.0.0"
  },
  "optionalDependencies": {},
  "repository": {
    "type": "git",
    "url": "https://jonasroessum@bitbucket.org/jonasroessum/tomato-hours.git"
  }
}
